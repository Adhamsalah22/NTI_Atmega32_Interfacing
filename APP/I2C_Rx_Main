#include "STD_Types.h"
#include "Bit_Math.h"
#include "DIO_interface.h"
#include "I2C_interface.h"

int main(void)
{
	DIO_voidSetPinDirection(PORTA,PIN0,OUTPUT);
	I2C_Slave_voidInit(0x10);

	while(1)
	{
		u8 data;
		I2C_Slave_voidListen();
		I2C_Slave_enuReadu8Data(&data);
		if(data == 0x30)
		{
			DIO_SetPinValue(PORTA,PIN0,HIGH);
		}
		I2C_Slave_enuReadu8Data(&data);
	}

}

